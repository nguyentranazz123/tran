{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
{% if student == null %}
   <p>ID not found</p>
{% else %}
   <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
        
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ student.Name }}</td>
            </tr>
            <tr>
                <th>DoB</th>
                <td>{{ student.DoB ? student.DoB|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PhoneNum</th>
                <td>{{ student.PhoneNum }}</td>
            </tr>
              <tr>
                <th>Gender</th>
                <td>{{ student.Gender }}</td>
            </tr>
        </tbody>
    </table>

    <h1>Student</h1>
    <a href="{{ path('app_student_index') }}">back to list</a>

    <a href="{{ path('app_student_edit', {'id': student.id}) }}">edit</a>

    {{ include('student/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
